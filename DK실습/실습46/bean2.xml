<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean class="exam2.Homework" id="h1" c:_0="국어"/>
  <bean class="exam2.Homework" id="h2" c:_0="영어"/>
  <bean class="exam2.Homework" id="h3" c:_0="수학"/>
  <bean class="exam2.Student" id="st1" p:name="둘리" p:homework-ref="h1"/>
  <bean class="exam2.Student" id="st2" p:name="또치" p:homework-ref="h2"/>
  <bean class="exam2.Student" id="st3" p:name="도우너" p:homework-ref="h3"/>

</beans>